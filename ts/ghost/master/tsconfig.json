{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "lib"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
